<UserControl x:Class="wcheck.wcontrols.WTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wcheck.wcontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Cursor="IBeam" IsHitTestVisible="True" MouseLeftButtonUp="Grid_PreviewMouseDown">
    <Grid IsHitTestVisible="True">
        <Border BorderBrush="#fca577" BorderThickness="1" CornerRadius="5" IsHitTestVisible="True" Cursor=""/>
        <TextBox IsHitTestVisible="True" CaretBrush="#1f1f1f" Background="Transparent" x:Name="uiTextBox" Foreground="#1f1f1f" BorderThickness="0" PreviewTextInput="uiTextBox_PreviewTextInput" PreviewKeyDown="uiTextBox_PreviewKeyDown" PreviewKeyUp="uiTextBox_PreviewKeyDown" Margin="10 0" VerticalAlignment="Center"/>
        <TextBlock IsHitTestVisible="True" x:Name="uiPlaceHolder" Foreground="#535353" Text="" VerticalAlignment="Center" Margin="10 0 0 0"/>
    </Grid>
</UserControl>
